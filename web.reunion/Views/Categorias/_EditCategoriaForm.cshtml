@model web.reunion.Models.Categoria

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CategoriaId" />
    <div class="form-group mb-3">
        <label asp-for="Descricao" class="form-label fw-semibold fs-5"></label>
        <input asp-for="Descricao" class="form-control" placeholder="Insira a Descrição/Nome do Material." />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success" id="editMaterialConfirm">
            <i class="fa-regular fa-floppy-disk"></i>
            Guardar Alterações
        </button>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
            <i class="fa-solid fa-xmark"></i>
            Cancelar
        </button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
