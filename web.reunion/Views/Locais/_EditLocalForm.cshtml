@model web.reunion.Models.Local

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LocalId" />
    <div class="form-group mb-3">
        <label asp-for="Descricao" class="form-label fw-semibold fs-5"></label>
        <input asp-for="Descricao" name="Local.Descricao" class="form-control" placeholder="Insira a Descrição/Nome do Material." />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="AdminGroupId" class="form-label fw-semibold fs-5"></label>
        <select id="editAdminGroupLocal" name="Local.AdminGroupId" asp-for="AdminGroupId" class="form-select" asp-items="@ViewBag.AdminGroupId"></select>
        <span asp-validation-for="@Model.AdminGroupId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="IsActive" class="form-label fw-semibold fs-5"></label>
        <select asp-for="IsActive" class="form-select">
            <option value="True">Ativo</option>
            <option value="False">Inativo</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success" id="editMaterialConfirm">
            <i class="fa-regular fa-floppy-disk"></i>
            Guardar Alterações
        </button>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
            <i class="fa-solid fa-xmark"></i>
            Cancelar
        </button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
